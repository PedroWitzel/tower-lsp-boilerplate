{
  "name": "generic-language-server",
  "description": "generic language server",
  "license": "MIT",
  "version": "1.5.0",
  "categories": [],
  "keywords": [
    "language-server",
    "tower-lsp"
  ],
  "repository": {
    "url": "https://github.com/IWANABETHATGUY/tower-lsp-boilerplate"
  },
  "engines": {
    "vscode": "^1.83.0"
  },
  "enabledApiProposals": [],
  "activationEvents": [
    "onLanguage:gen"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "gen",
        "extensions": [
          ".gen"
        ]
      }
    ],
    "configuration": {
      "type": "object",
      "title": "generic-language-server",
      "properties": {
        "generic-language-server.trace.server": {
          "type": "string",
          "scope": "window",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "enumDescriptions": [
            "No traces",
            "Error only",
            "Full log"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    },
    "commands": [
      {
        "command": "helloworld.helloWorld",
        "title": "Say Hello"
      }
    ]
  },
  "scripts": {
    "postinstall": "cd client && pnpm i",
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./client/src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "test-compile": "cargo check && tsc -p ./",
    "compile": "cargo build && cross-env NODE_ENV=production tsc -b",
    "watch": "cargo build && rm -rf dist && tsc -b -w",
    "lint": "eslint ./client/src --ext ts",
    "lint-fix": "eslint ./client/src --ext ts --fix",
    "pretest": "cargo build && npm run compile && npm run lint",
    "build": "webpack --config webpack.config.js",
    "package": "vsce package --no-dependencies",
    "publish": "vsce publish --no-dependencies"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.3.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.2",
    "@types/node": "^20.8.3",
    "@types/vscode": "^1.83.0",
    "@vscode/test-electron": "^2.3.5",
    "@vscode/vsce": "^2.21.1",
    "cross-env": "^7.0.3",
    "esbuild": "^0.19.4",
    "eslint": "^8.51.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "ts-loader": "^9.5.0",
    "typescript": "^5.2.2",
    "vscode-uri": "^3.0.8",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "pnpm": {
    "overrides": {
      "semver@>=7.0.0 <7.5.2": ">=7.5.2"
    }
  }
}